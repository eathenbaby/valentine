# ============================================
# ANONYMOUS CONFESSION PLATFORM - ENVIRONMENT VARIABLES
# ============================================

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/confession_platform"

# Session Configuration
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Next.js Configuration
NEXT_PUBLIC_URL="http://localhost:5000"
NODE_ENV="development"

# OAuth Configuration - Instagram
INSTAGRAM_CLIENT_ID="your-instagram-app-id"
INSTAGRAM_CLIENT_SECRET="your-instagram-app-secret"

# OAuth Configuration - Google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Razorpay Payment Configuration (India)
RAZORPAY_KEY_ID="rzp_test_your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"
RAZORPAY_WEBHOOK_SECRET="your-razorpay-webhook-secret"
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_your-razorpay-key-id"

# Admin Configuration
ADMIN_EMAIL="admin@example.com"

# Instagram Business Account (for posting)
INSTAGRAM_BUSINESS_ACCOUNT_ID="your-instagram-business-account-id"
INSTAGRAM_ACCESS_TOKEN="your-instagram-long-lived-access-token"

# Image Storage (Cloudinary - optional)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Analytics (optional)
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Development Settings
DEBUG="true"
LOG_LEVEL="info"
